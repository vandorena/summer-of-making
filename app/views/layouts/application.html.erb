    <meta property="og:description" content="Build stuff, Get stuff, Repeat! Win awesome prizes for building personal coding projects, from June 16 - August 31, 2025">
    <meta property="og:image" content="<%= asset_url('social_card.png') %>">
    <meta property="og:url" content="<%= request.original_url %>">
    <meta property="og:type" content="website">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="Hack Club Summer of Making">
    <meta name="twitter:description" content="Build stuff, Get stuff, Repeat! Win awesome prizes for building personal coding projects, from June 16 - August 31, 2025">
    <meta name="twitter:image" content="<%= asset_url('social_card.png') %>">
    <% if current_user&.has_badge?(:spider) %>
    <%= javascript_include_tag "vendor/bug" %>
      <script>
          new SpiderController({
              imageSprite: "<%= asset_path "spider-sprite.webp" %>",
              canDie: false,
              minBugs: 1,
              maxBugs: 1,
              mouseOver: "fly"
          })
      </script>
    <% end %>
  </head>

  <body class="min-h-[100dvh] font-national-park font-bold text-som-dark overflow-hidden">
    <%# admin_tool do %>
      <%# render "shared/stonk_tickler_marquee" %>
    <%# end %>

    <div class="sinkening-container">
      <% if user_signed_in? %>
        <% if current_user.tutorial_progress.completed? && !mobile_device? %>
          <div data-controller="todo">
            <button
              data-todo-target="todoButton"
              id = "todo-button"
              data-action="click->todo#toggleAndComplete"
              class="bg-[#523A52] hover:bg-[#856185] fixed hidden top-auto bottom-8 right-6 z-50 w-16 h-16 rounded-full md:flex items-center justify-center transition-all duration-200 hover:scale-110 text-white cursor-pointer drop-shadow-md sinkening-todo"
              title="Show todo for this page">
              <%= inline_svg "icons/clipboard.svg", class: "size-8" %>
            </button>
            <!-- Todo Modal -->
            <%= render "tutorial/todo_modal" %>
            <% if !current_page?(campfire_path) && !current_user.tutorial_progress.soft_step_completed?("todo") && current_user.tutorial_progress.completed? && current_user.projects.empty? %>
              <div class="bg-black/75 absolute inset-0 z-40 text-white cursor-pointer" data-todo-target="overlay" data-action="click->todo#completeAndHideOverlay">
                <div class="absolute bottom-24 right-24">
                  <p class="text-3xl pr-8 pb-4">Check your todo list here!</p>
                  <%= inline_svg "swirly-arrow.svg", class: "size-52 rotate-90 ml-auto" %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
        <div>
          <%= render "tutorial/tutorial" %>
          <% if current_user.tutorial_progress.should_show_completion_modal? %>
            <%= render "tutorial/completion_modal" %>
          <% end %>
          <% if current_page?(map_path) %>
            <%= yield %>
          <% else %>
            <div data-controller="sidebar" data-sidebar-collapsed-value="false">
              <% if mobile_device? %>
                <div class="flex flex-col h-[100dvh] box-border p-0">
                  <main class="py-4 px-0 sm:px-4 overflow-y-scroll flex-grow flex-shrink">
                    <div id="flash-container">
                      <%= render "shared/flash" %>
                    </div>
                    <%= yield %>
                  </main>
                  <%= render "shared/mobile_nav" %>
                </div>
              <% else %>
                <div class="flex flex-col h-[100dvh] box-border p-0">
                  <% if !current_user.has_hackatime? && !current_user.tutorial_progress.completed_at.nil? %>
                    <div class="w-full bg-vintage-red text-white flex flex-col justify-center py-2">
                      <p class="text-center">
                        Your time spent coding is not currently being tracked, therefore you can't create any projects.
                        <br>
                        <%= link_to "Connect Hackatime (our coding time tracking thing)", hackatime_auth_redirect_path, class: "underline", target: "_blank" %>
                      </p>
                    </div>
                  <% end %>
                  <div class="flex h-full min-h-0">
                    <%= render "shared/sidebar" %>
                    <main class="overflow-auto w-full" data-sidebar-target="mainContent">
                      <div id="flash-container">
                        <%= render "shared/flash" %>
                      </div>
                      <%= yield %>
                    </main>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div id="flash-container">
          <%= render "shared/flash" %>
        </div>
        <%= yield %>
      <% end %>
      <div id="modals"></div>
    </div>

    <% if user_signed_in? && Flipper.enabled?(:sinkening, current_user) %>
      <div class="">
        <div class="fixed bottom-0 left-0 right-0 sinkening-water z-[100] translate-y-42">
          <svg viewBox="0 0 1200 200" class="w-full h-full" preserveAspectRatio="none">
            <path d="M0,200 L0,100 Q300,60 600,100 T1200,100 L1200,200 Z" fill="rgba(3, 105, 161, 0.4)"/>
          </svg>
        </div>
        <div class="fixed bottom-0 left-0 right-0 sinkening-water-2 z-[100] translate-y-42">
          <svg viewBox="0 0 1200 200" class="w-full h-full" preserveAspectRatio="none">
            <path d="M0,200 L0,120 Q400,80 800,120 T1200,120 L1200,200 Z" fill="rgba(3, 105, 161, 0.4)"/>
          </svg>
        </div>
      </div>

      <% 
        intensity = SinkeningSetting.current.intensity
        adjusted_intensity = intensity * intensity
        rotation_intensity = 3 * adjusted_intensity
        vertical_intensity = 50 * adjusted_intensity
        water_rotation_intensity = 3 * adjusted_intensity + 2
        water_vertical_intensity = 30 * adjusted_intensity + 20
      %>

      <style>
        @keyframes water-rock {
          0% { transform: rotate(-<%= water_rotation_intensity %>deg) translateY(<%= water_vertical_intensity * 0.2 %>px) translateX(-<%= adjusted_intensity * 20 %>px); }
          40% { transform: rotate(<%= water_rotation_intensity * 0.2 %>deg) translateY(-<%= water_vertical_intensity * 0.8 %>px) translateX(<%= adjusted_intensity * 30 %>px); }
          45% { transform: rotate(<%= water_rotation_intensity * 0.2 %>deg) translateY(-<%= water_vertical_intensity * 0.8 %>px) translateX(<%= adjusted_intensity * 30 %>px); }
          95% { transform: rotate(-<%= water_rotation_intensity %>deg) translateY(<%= water_vertical_intensity * 0.2 %>px) translateX(-<%= adjusted_intensity * 20 %>px); }
          100% { transform: rotate(-<%= water_rotation_intensity %>deg) translateY(<%= water_vertical_intensity * 0.2 %>px) translateX(-<%= adjusted_intensity * 20 %>px); }
        }
        
        .sinkening-container {
          transform: rotate(-<%= rotation_intensity %>deg) translateY(<%= vertical_intensity %>px);
        }

        .sinkening-water {
          animation: water-rock 10s ease-in-out -4s infinite;
          pointer-events: none;
          width: 150vw;
          margin-left: -25vw;
          height: calc(30rem + <%= adjusted_intensity*130 %>vh);
        }

        .sinkening-water-2 {
          animation: water-rock 10s ease-in-out -8s infinite;
          pointer-events: none;
          width: 150vw;
          margin-left: -25vw;
          height: calc(30rem + <%= adjusted_intensity*130 %>vh);
        }
      </style>
    <% end %>
  </body>
</html>