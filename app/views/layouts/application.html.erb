                    <%= render "shared/sidebar" %>
                    <main class="w-full overflow-auto" data-sidebar-target="mainContent">
                      <div id="flash-container">
                        <%= render "shared/flash" %>
                      </div>
                      <%= yield %>
                    </main>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
