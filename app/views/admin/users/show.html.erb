  <% @payouts.each do |payout| %>
    <li id="<%= dom_id payout %>"><%= render payout %></li>
  <% end %>
</ul>
<details>
  <summary>
    create manual adjustment payout
  </summary>
  <%= form_with url: create_payout_admin_user_path(@user), scope: :payout do |f| %>
