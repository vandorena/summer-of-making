      <%= f.label :amount, "Amount: " %>
      <%= f.number_field :amount %>
    </div>
    <div>
      <%= f.label :reason, "Reason: " %>
      <%= f.text_area :reason, placeholder: "i just want them to have some walkin' around money!", rows: 3 %>
    </div>
    <%= f.submit "do it!" %>
  <% end %>
</details>
